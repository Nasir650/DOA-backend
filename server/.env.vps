# VPS Production Environment Configuration for DOA Backend

# Database Configuration (VPS MongoDB)
MONGODB_URI=mongodb://doauser:DOASecurePass123!@localhost:27017/doa-voting-prod

# JWT Configuration
JWT_SECRET=vps-super-secure-jwt-secret-key-change-this-in-production-2024
JWT_EXPIRE=7d

# Server Configuration
PORT=5000
NODE_ENV=production

# Client Configuration (Update with your actual domain)
CLIENT_URL=https://yourdomain.com

# File Upload Configuration
MAX_FILE_SIZE=5242880

# Admin Configuration (Update these credentials)
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_PASSWORD=secure-admin-password-change-this-2024

# Security Configuration
BCRYPT_ROUNDS=12

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Origins (comma separated - update with your domains)
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# MongoDB Admin Credentials (for database management)
MONGODB_ADMIN_USER=admin
MONGODB_ADMIN_PASSWORD=SecureAdminPass123!

# Backup Configuration
BACKUP_RETENTION_DAYS=7
BACKUP_SCHEDULE="0 2 * * *"

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=/var/www/doa-backend/logs/app.log

# SSL Configuration (if using custom SSL)
SSL_CERT_PATH=/etc/ssl/certs/yourdomain.crt
SSL_KEY_PATH=/etc/ssl/private/yourdomain.key
